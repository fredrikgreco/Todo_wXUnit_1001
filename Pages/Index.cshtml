@page
@using Models_Todo
@model Todo_wXUnit_1001.Pages.IndexModel

@{
    ViewData["Title"] = "Todo wXUnit";
}

<body>

    <div id="mainGrid">
        <div id="topGrid">
            <h1>TODO</h1>
        </div>
        <div id="ulGrid">

            @if (Model.Todos != null)
            {
                foreach (var todo in Model.Todos)
                {
                    // Your existing loop logic here


                        <div class="ulGridCell @(todo.IsDone ? "done-todo" : "")">
                            <div>
                                <label asp-for="@todo.Title"></label>
                                <input id="@($"title_{todo.Id}")" asp-for="@todo.Title" class="form-control" disabled="@(todo.IsDone ? "disabled" : null)" />
                            </div>
                            <div>
                                <label asp-for="@todo.Content"></label>
                                <textarea id="@($"content_{todo.Id}")" asp-for="@todo.Content" class="form-control" disabled="@(todo.IsDone ? "disabled" : null)"></textarea>
                            </div>
                            <div>
                                <label asp-for="@todo.IsDone"></label>
                                <input type="checkbox" data-todo-id="@todo.Id" @(todo.IsDone ? "checked" : "") />
                            </div>
                            <div>
                                <button onclick="deleteTodo('@todo.Id')">Delete</button>
                            </div>
                        </div>

                    
                }
            }
            else
            {
                <p>No todos available.</p>
            }



        </div>
    </div>

    @section Scripts {
        <script defer>
            console.log('Script loaded successfully.');

            async function deleteTodo(todoId) {
                var confirmDelete = confirm("Are you sure you want to delete this todo?");
                if (confirmDelete) {
                    try {
                        const response = await fetch('/Todo/UpdateIsDone', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify({
                                todoId: todoId,
                                isDone: false,
                                isDeleted: true,
                                title: document.getElementById(`title_${todoId}`).value,
                                content: document.getElementById(`content_${todoId}`).value
                            }),
                        });

                        if (response.ok) {
                            var todoContainer = document.getElementById(`ulGridCell_${todoId}`);
                            todoContainer.remove();
                        } else {
                            console.error('Error deleting todo');
                        }
                    } catch (error) {
                        console.error('Error:', error);
                    }
                }
            }




            document.addEventListener('DOMContentLoaded', function () {
                var checkboxes = document.querySelectorAll('[id^="isDoneCheckbox_"]');

                checkboxes.forEach(function (checkbox) {
                    checkbox.addEventListener('change', function () {
                        var todoId = checkbox.id.split('_')[1];
                        var isDoneValue = checkbox.checked;

                        console.log('Todo ID:', todoId);
                        console.log('Is Done Value:', isDoneValue);

                        console.log('Request Payload:', JSON.stringify({ todoId: todoId, isDone: isDoneValue }));

                        fetch('/Todo/UpdateIsDone', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify({
                                todoId: todoId,
                                isDone: isDoneValue,
                                isDeleted: false,

                                title: document.getElementById(`title_${todoId}`).value,
                                content: document.getElementById(`content_${todoId}`).value
                            }),
                        })
                            .then(response => response.json())
                            .then(data => {
                                console.log('Success:', data);

                                if (data.isDeleted) {
                                    var todoContainer = checkbox.closest('.ulGridCell');
                                    todoContainer.remove();
                                }

                                var todoContainer = checkbox.closest('.ulGridCell');
                                var inputFields = todoContainer.querySelectorAll('input, textarea');
                                inputFields.forEach(function (input) {
                                    if (input.type !== 'checkbox') {
                                        input.disabled = !!isDoneValue;
                                    }
                                });
                            })
                            .catch((error) => {
                                console.error('Error:', error);
                            });
                    });
                });
            });
        </script>
    }
</body>
